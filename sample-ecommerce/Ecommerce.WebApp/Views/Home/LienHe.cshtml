@{
    ViewData["Title"] = "Trang Liên Hệ";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/client/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2 style="color:black">Trang Liên Hệ</h2>
                    <div class="breadcrumb__option">
                        <a href="/product" style="color:black">Liên Hệ</a>
                        <span style="color:black">BichThuy@gmail.com</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="spad">
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <div class="row w-100">
                <!-- Form liên hệ -->
                <div class="col-lg-6 col-md-8 mx-auto">
                    <div class="product__details__text bg-light p-4 rounded shadow">
                        <h3 class="text-center mb-4">Liên Hệ Với Ban Quản Trị</h3>

                        <form>
                            <!-- Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Email của bạn" required>
                            </div>

                            <!-- Nội dung yêu cầu -->
                            <div class="mb-3">
                                <label for="content" class="form-label">Nội dung yêu cầu</label>
                                <textarea class="form-control" id="content" rows="4" placeholder="Nội dung yêu cầu" required></textarea>
                            </div>

                            <!-- Nút gửi yêu cầu -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary w-50">Gửi Yêu Cầu</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Liên hệ email -->
                <div class="col-lg-12 mt-4">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs justify-content-center" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#tabs-1" role="tab"
                                   aria-selected="true">Liên hệ trực tiếp email: <strong>BichThuy@gmail.com</strong></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
